For structs


#include<cmath>
#include <iostream>
using namespace std;
template<typename T>
struct rohit{

	T f{};
	T s{};
};

int main(){
	rohit<int> obj{1, 1};
	cout<<obj.f<<obj.s;
	return 0;
}

--------------------------------------------------------------------

#include<cmath>
#include <iostream>
using namespace std;

//expansion looks like this

template<typename T>
struct rohit;

template<>
struct rohit<int>{
	int f{};
	int s{};
};

template<>
struct rohit<double>{
	double f{};
	double s{};
};

int main(){
	rohit<int> obj{1, 1};
	rohit<double> obj1{1.1, 1.1};
	cout<<obj.f<<" "<<obj.s;
	cout<<endl;
	cout<<obj1.f<<" "<<obj1.s;
	return 0;
}


--------------------------------------------------------------------
Using our class template in a function

#include<cmath>
#include <iostream>
using namespace std;

template<typename T>
struct rohit{
	T f{};
	T s{};
};

template<typename T>
T max(rohit<T> s){
	return s.f > s.s ? s.f : s.s;
}

int main(){
	rohit<int> f{1,2};
	cout<<max<int>(f)<<endl;
	rohit<double> f1{1.3,2.4};
	cout<<max<double>(f1)<<endl;
	return 0;
}


--------------------------------------------------------------------


Class templates with multiple template types

#include<cmath>
#include <iostream>
using namespace std;

template<typename T, typename U>
struct rohit{
public:
	T f{};
	U s{};
};

template<typename T, typename U>
void max(rohit<T, U> s){
	cout<<s.f<<" "<<s.s<<endl;
}

int main(){
	rohit<int, int> f{1,2};
	max<int, int>(f);
	rohit<double, double> f1{1.3,2.4};
	max<double, double>(f1);
	return 0;
